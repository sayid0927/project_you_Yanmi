<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white">
    <RelativeLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zxly.o2o.view.CircleImageView
            android:id="@+id/img_user_head"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:border_color="@color/white"
            android:src="@drawable/default_head_big"
            />
        <RelativeLayout
            android:layout_toRightOf="@+id/img_user_head"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:gravity="center"
                android:textSize="13sp"
                android:text="1212121"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_phone"
                android:textSize="11sp"
                android:text="521521521212121"
                android:textColor="#888888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_check"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_check_press"
            android:layout_marginRight="33dp"/>
    </RelativeLayout>
   
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_dcdcdc"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_12dp"/>
</LinearLayout>