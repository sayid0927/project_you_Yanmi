<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_head_icon"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_default_170x170" />


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/img_head_icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="暂无"
        android:textColor="@color/gray_333333"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/txt_browseCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_head_icon"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@+id/img_head_icon"
        android:text="9999 浏览数"
        android:textColor="@color/gray_999999"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/btn_promotion"
        android:layout_width="64dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/img_head_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/btn_promotion_normal"
        android:gravity="center"
        android:text="推广"
        android:textColor="@color/orange_ff5f19"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_dcdcdc" />

</RelativeLayout>