<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">


    <com.easemob.easeui.widget.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_eeeeee">


                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/orange_ff5f19" />

                <TextView
                    android:id="@+id/tv_user_phone_info_tag"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="购买手机信息"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_user_phone_info_tag"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="购买人"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="85dp"
                        android:background="@null"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:background="#dcdcdc" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_user_phone_info_tag"
                    android:layout_marginTop="45dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="手机号"
                        android:textColor="@color/gray_999999"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="85dp"
                        android:layout_marginRight="20dp"
                        android:singleLine="true"
                        android:textColor="@color/gray_999999"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:background="#dcdcdc" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_user_phone_info_tag"
                    android:layout_marginTop="90dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="品牌型号"
                        android:textColor="@color/gray_999999"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="85dp"
                        android:layout_marginRight="20dp"
                        android:singleLine="true"
                        android:textColor="@color/gray_999999"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:background="#dcdcdc" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/view_imei"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_user_phone_info_tag"
                    android:layout_marginTop="135dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_imei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="IMEI"
                        android:textColor="@color/gray_999999"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edit_imei"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="85dp"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:singleLine="true"
                        android:inputType="none"
                        android:textColor="@color/gray_999999"
                        android:textSize="14sp" />

                </RelativeLayout>


                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:layout_below="@+id/view_imei"
                    android:layout_marginTop="14dp"
                    android:background="@color/orange_ff5f19" />

                <TextView
                    android:id="@+id/tv_user_buy_info_tag"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/view_imei"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="购买信息"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_price_tag"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/layout_user_info"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="手机价格   ￥"
                android:textColor="@color/gray_999999"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/layout_user_info"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/tv_price_tag"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:textColor="@color/gray_999999"
                android:textColorHint="#cccccc"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/divide1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tv_price"
                android:layout_marginLeft="12dp"
                android:background="#dcdcdc" />


            <TextView
                android:id="@+id/tv_insure_tag"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/divide1"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="延保价格   ￥"
                android:textColor="@color/gray_999999"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_insure"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/divide1"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/tv_insure_tag"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:textColor="@color/gray_999999"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tv_insure"
                android:layout_marginLeft="12dp"
                android:background="#dcdcdc" />

            <TextView
                android:id="@+id/tv_upload_photo_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_insure"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:text="上传照片 请按照下图范例上传"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/btn_photo_upload"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_upload_photo_tag"
                android:layout_marginBottom="17dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/insure_add_pic"
                android:scaleType="centerCrop" />


            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/eg_image"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_below="@+id/tv_upload_photo_tag"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="17dp"
                android:layout_toLeftOf="@+id/btn_photo_upload"
                android:background="@drawable/insure_pic_default"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/btn_photo_upload"
                android:background="#eeeeee">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="300dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn_orange_ff5f19_selector"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>

    </com.easemob.easeui.widget.OverScrollView>

</RelativeLayout>