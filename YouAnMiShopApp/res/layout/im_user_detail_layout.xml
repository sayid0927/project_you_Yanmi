<?xml version="1.0" encoding="utf-8"?>

<com.zxly.o2o.view.MyFlipperView
    android:id="@+id/list_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    >

    <include
        layout="@layout/flipper_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <com.easemob.chatuidemo.widget.OverScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/detail_main_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="15dp">

                <ImageView
                    android:id="@+id/user_photo_defaul"
                    android:layout_width="@dimen/ease_user_photo_big"
                    android:layout_height="@dimen/ease_user_photo_big"
                    android:layout_marginLeft="20dp"
                    android:background="@color/transparent"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/head_photo_default"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/user_photo"
                    android:layout_width="@dimen/ease_user_photo_big"
                    android:layout_height="@dimen/ease_user_photo_big"
                    android:layout_marginLeft="20dp"
                    android:background="@color/transparent"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/head_photo_default"/>

                <ImageView
                    android:layout_width="@dimen/ease_user_photo_big"
                    android:layout_height="@dimen/ease_user_photo_big"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/head_photo_empty"
                    android:contentDescription="@null"/>

                <TextView
                    android:id="@+id/detail_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/user_photo"
                    android:lineSpacingExtra="2dp"
                    android:textColor="#333333"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/user_photo"
                    android:layout_marginTop="10dp"
                    android:background="#e6e6e6"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_photo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:text="账户信息 :"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/user_photo"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="25dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/phone_num"
                    android:layout_marginTop="15dp"
                    android:background="#e6e6e6"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone_num"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="收货地址 ："
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/adress"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/phone_num"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:maxLines="2"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/adress"
                    android:layout_marginTop="15dp"
                    android:background="#e6e6e6"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adress"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="最后登录时间:"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/last_load_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/adress"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/last_load_time"
                    android:layout_marginTop="15dp"
                    android:background="#e6e6e6"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/last_load_time"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="备注:"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/remarkName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/last_load_time"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/goto_right"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/remarkName"
                    android:layout_marginTop="15dp"
                    android:background="#e6e6e6"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/remarkName"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="分组:"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/divider_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/remarkName"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/goto_right"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/divider_group"
                    android:layout_marginTop="15dp"
                    android:background="#e6e6e6"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/divider_group"
                    android:layout_marginTop="16dp"
                    android:background="#f6f6f6"/>

                <TextView
                    android:id="@+id/add_to_blacklist"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/divider_group"
                    android:layout_marginTop="40dp"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="加入黑名单"
                    android:visibility="gone"
                    android:textColor="#dd2727"
                    android:textSize="14sp"/>

            </RelativeLayout>
        </com.easemob.chatuidemo.widget.OverScrollView>

        <TextView
            android:id="@+id/btn_remove_from_blacklist"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="移除黑名单"
            android:textColor="#e98181"
            android:textSize="18sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/call_him_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <com.easemob.chatuidemo.widget.DrawableCenterTextView
                android:id="@+id/btn_send_message"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#f6f6f6"
                android:drawableLeft="@drawable/ease_liaotian_normal"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="发消息"
                android:textColor="#dd2727"
                android:textSize="18sp"/>

            <com.easemob.chatuidemo.widget.DrawableCenterTextView
                android:id="@+id/phone_him"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#dd2727"
                android:drawableLeft="@drawable/ease_call_normal"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="打电话"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/call_him_layout"
            android:background="#e6e6e6"/>
    </RelativeLayout>

</com.zxly.o2o.view.MyFlipperView>