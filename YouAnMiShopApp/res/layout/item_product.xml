<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/grey" />

    <FrameLayout
        android:id="@+id/icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="120dip"
        android:layout_below="@id/line1">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_item_icon"
            android:layout_width="100dp"
            android:layout_height="100dp" android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
           />

        <ImageView
            android:id="@+id/img_plot_flag"
            style="@style/wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/lin_layout"
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/icon_layout"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="2"
                android:text="vivo X5电信4G手机5寸大屏极致体验，无与伦比"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/btn_tuiguang"
                android:layout_width="64dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn1_selector"
                android:gravity="center"
                android:text="推广"
                android:textColor="#EB3434"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="bottom"
            android:paddingRight="5dip">

            <TextView
                android:id="@+id/txt_price"
                style="@style/text_16_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥6500.00" />

            <TextView
                android:id="@+id/txt_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#B0B0B0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_comission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line_bottom"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/lin_layout"
        android:background="@color/grey" />
</RelativeLayout>
