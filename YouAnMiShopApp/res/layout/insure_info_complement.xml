<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:orientation="vertical">




    <com.easemob.easeui.widget.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_eeeeee">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#fc911f"
                    android:drawableLeft="@drawable/warning_grey"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="请确认用户保障的手机为新手机!"
                    android:textColor="@color/white"/>

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="46dp"
                    android:background="@color/orange_ff5f19"/>

                <TextView
                    android:id="@+id/tv_user_phone_info_tag"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="32dp"
                    android:gravity="center_vertical"
                    android:text="购买手机信息"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_user_phone_info_tag"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="11dp"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_imei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_brand"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="14sp"/>


                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:layout_below="@+id/tv_imei"
                    android:layout_marginTop="29dp"
                    android:background="@color/orange_ff5f19"/>

                <TextView
                    android:id="@+id/tv_user_buy_info_tag"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tv_imei"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="购买信息"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_price_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_user_info"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:text="手机价格   ￥"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/et_price_input"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/layout_user_info"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/tv_price_tag"
                android:background="@color/transparent"
                android:hint="请填写手机价格"
                android:inputType="numberDecimal"
                android:textColor="#333333"
                android:textColorHint="#cccccc"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/divide1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/et_price_input"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="#dcdcdc"/>


            <TextView
                android:id="@+id/tv_insure_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divide1"
                android:layout_margin="12dp"
                android:text="延保价格"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/et_insure_input"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/divide1"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/tv_insure_tag"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/et_insure_input"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="#dcdcdc"/>


            <TextView
                android:id="@+id/tv_upload_photo_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_insure_input"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:text="上传照片 请按照下图范例上传"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/btn_photo_upload"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_upload_photo_tag"
                android:layout_marginBottom="17dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/insure_add_pic"
                android:scaleType="centerCrop"/>


            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/eg_image"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_below="@+id/tv_upload_photo_tag"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="17dp"
                android:layout_toLeftOf="@+id/btn_photo_upload"
                android:background="@drawable/insure_pic_default"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/btn_photo_upload"
                android:background="#eeeeee">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginBottom="300dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn_orange_ff5f19_selector"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </RelativeLayout>
        </RelativeLayout>

    </com.easemob.easeui.widget.OverScrollView>

</RelativeLayout>