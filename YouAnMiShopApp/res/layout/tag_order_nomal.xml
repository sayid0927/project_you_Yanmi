<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:background="@color/white">


    <TextView
        android:id="@+id/txt_userInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="15dp"
        android:text="王小二 ( 13555555555 )"
        android:textColor="@color/gray_999999"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_userInfo"
        android:layout_below="@+id/txt_userInfo"
        android:layout_marginTop="4dp"
        android:width="300dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="福田区车公庙天安数码城创新科技广场一期B栋608"
        android:textColor="@color/gray_999999"
        android:textSize="12sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_userInfo"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txt_price"
        android:text="合计： "
        android:textColor="@color/gray_666666"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_userInfo"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:text="￥77000"
        android:textColor="@color/red_ff0000"
        android:textSize="15sp" />


</RelativeLayout>