<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <TextView
        android:id="@+id/txt_ranking"
        android:layout_width="21dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:layout_marginBottom="7.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="7.5dp"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:textColor="#bbbbbb"
        android:text="" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_head"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/txt_ranking"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@id/img_head"
        android:layout_alignBottom="@+id/img_head"
        android:src="@drawable/bg_enpty_45" />


    <TextView
        android:id="@+id/txt_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_head"
        android:layout_marginTop="16dp"
        android:text=""
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:gravity="center"
        android:textColor="#ff9701"
        android:textSize="9sp"
        android:background="@drawable/bg_biaoqian"
        />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        android:layout_toRightOf="@+id/txt_user_type"
        android:layout_alignTop="@+id/txt_user_type"
        android:layout_toLeftOf="@+id/txt_count"
        android:layout_marginLeft="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="15dp"
        android:text=""
        android:textColor="@color/gray_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_phoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/img_head"
        android:text=""
        android:textColor="@color/gray_999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:text=""
        android:textColor="@color/orange_ff5f19"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txt_promotion_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_count"
        android:layout_marginTop="4dp"
        android:layout_marginRight="11dp"
        android:text=""
        android:textColor="@color/grey_aaaaaa"
        android:textSize="11sp" />

    <View
    android:id="@+id/view_bot_line"
    android:layout_width="match_parent"
    android:layout_height="0.8dip"
    android:layout_below="@+id/img_head"
    android:background="@color/gray_dcdcdc"/>

</RelativeLayout>