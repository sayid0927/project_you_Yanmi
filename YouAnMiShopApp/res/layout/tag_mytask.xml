<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/btn_show_my_sendedorders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看我的送货清单"
        android:paddingTop="8dip"
        android:paddingBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/btn1_normal"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/red_dd2727"
    />

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_below="@+id/btn_show_my_sendedorders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.5dip"
            android:text="我的任务"
            android:paddingTop="11dip"
            android:paddingBottom="11dip"
            android:layout_marginLeft="10dip"
            android:textSize="16sp"
            android:textColor="@color/black_000000"/>

        <ImageView
            android:id="@+id/btn_turnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txt_month"
            android:src="@drawable/turn_to_left"/>
        <TextView
            android:id="@+id/txt_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.5dip"
            android:paddingTop="11dip"
            android:paddingBottom="11dip"
            android:layout_marginLeft="22dip"
            android:layout_marginRight="22dip"
            android:layout_toLeftOf="@+id/btn_turnRight"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/dark_grey"/>
        <ImageView
            android:id="@+id/btn_turnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_centerVertical="true"
            android:src="@drawable/turn_to_right"/>
    </RelativeLayout>
    
    <View
        android:id="@+id/line1"
        android:layout_below="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:layout_height="0.7dip"
        android:background="@color/grey"/>

    <com.zxly.o2o.view.MListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:cacheColorHint="#00000000"
        android:divider="#19000000"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="#00000000"
        android:smoothScrollbar="true" />
    <View
        android:id="@+id/line2"
        android:layout_below="@+id/listview"
        android:layout_width="match_parent"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:layout_height="0.7dip"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/btn_my_prmotion_info"
        android:layout_below="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="我的推广收益"
        android:paddingTop="13.5dip"
        android:paddingBottom="13.5dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:textColor="@color/red_dd2727"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dip"
        android:layout_below="@+id/btn_my_prmotion_info"
        android:background="@color/grey_f6f6f6"/>
</RelativeLayout>
