<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/bg_top"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_eeeeee" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/txt_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:text="小明" />

        <TextView
            android:id="@+id/txt_guaranteeDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_userName"
            android:layout_toLeftOf="@+id/txt_createTime"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="申购xx保"
            android:textColor="@color/gray_999999"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/txt_guaranteeStatus"
            android:layout_width="39dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:background="@drawable/bg_daichuli"
            android:text="待处理"
            android:textColor="@color/white"
            android:textSize="9sp" />


        <TextView
            android:id="@+id/txt_createTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_userName"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:text="2016-12-12"
            android:textColor="@color/gray_999999"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:id="@+id/line_bot"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

</LinearLayout>