<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/white">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_bank_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp" />

    <ImageView
        android:id="@+id/img_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/checkbox_normal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_bankcard_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="625887869128453"
        android:textColor="@color/gray_666666"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@+id/img_bank_logo">

        <TextView
            android:id="@+id/txt_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招商银行"
            android:textColor="@color/gray_333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_card_type"
            android:layout_width="44dp"
            android:layout_height="16dp"
            android:layout_below="@+id/txt_bank_name"
            android:layout_marginTop="5dp"
            android:background="@drawable/icon_yhklx_bg"
            android:gravity="center"
            android:text="储蓄卡"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </RelativeLayout>

</RelativeLayout>