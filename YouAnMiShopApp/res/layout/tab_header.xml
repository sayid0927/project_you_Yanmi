<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="#f9f9f9"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tab_header_left_bt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tab_header_left_bt_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_back_selector"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp" />

        <TextView
            android:id="@+id/tab_header_left_bt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_header_right_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp" >

        <ImageView
            android:id="@+id/tab_header_right_bt_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tab_header_right_bt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tab_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxLength="18"
        android:textColor="#000"
        android:textSize="@dimen/main_tab_title_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_grey_line" />

</RelativeLayout>