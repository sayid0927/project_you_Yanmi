<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="10dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_promotion_shop_QRCode"
            android:layout_width="149dip"
            android:layout_height="149dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/lianjie_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_QRCode"
                android:layout_width="91dip"
                android:layout_height="91dip"
                android:layout_marginBottom="12dip"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="推广本店二维码"
                android:textColor="@color/light_grey"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_promotion_shop_url"
            android:layout_width="149dip"
            android:layout_height="149dip"
            android:background="@drawable/lianjie_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="91dip"
                android:layout_height="91dip"
                android:layout_marginBottom="12dip"
                android:src="@drawable/lianjie" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="推广本店连接地址"
                android:textColor="@color/light_grey"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dip"
        android:layout_below="@+id/gridview"
        android:layout_marginTop="10dip"
        android:background="@color/grey_f6f6f6" />

</LinearLayout>
