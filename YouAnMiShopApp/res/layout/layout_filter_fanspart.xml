<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white">
    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/layout_choose_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_choice_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="按组选择"
                        android:textColor="#000a14"
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="16dp"
                        />
                </LinearLayout>
                <com.zxly.o2o.view.FlowTagLayout
                    android:layout_below="@+id/ll_layout"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tagflowlayout"
                    android:visibility="visible"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_dcdcdc"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginRight="@dimen/dimen_12dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp">
                <TextView
                    android:id="@+id/tv_buy_willing"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/color_000a14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:text="购机意向"/>
                <LinearLayout
                    android:id="@+id/buy_willing_one"
                    android:layout_toRightOf="@+id/tv_buy_willing"
                    android:orientation="horizontal"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_marginLeft="27dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_tag_selector">
                    <ImageView
                        android:layout_marginLeft="4dp"
                        android:layout_width="12dp"
                        android:layout_height="11dp"
                        android:background="@drawable/icon_lightstar"/>
                    <ImageView
                        android:layout_marginLeft="6dp"
                        android:layout_width="12dp"
                        android:layout_height="11dp"
                        android:background="@drawable/icon_darkstar"/>
                    <ImageView
                        android:layout_marginLeft="6dp"
                        android:layout_width="12dp"
                        android:layout_height="11dp"
                        android:background="@drawable/icon_darkstar"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/buy_willing_two"
                    android:layout_toRightOf="@+id/buy_willing_one"
                    android:orientation="horizontal"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_tag_selector">
                    <ImageView
                        android:layout_marginLeft="4dp"
                        android:layout_width="12dp"
                        android:layout_height="11dp"
                        android:background="@drawable/icon_lightstar"/>
                    <ImageView
                        android:layout_marginLeft="6dp"
                        android:layout_width="12dp"
                        android:layout_height="11dp"
                        android:background="@drawable/icon_lightstar"/>
                    <ImageView
                        android:layout_marginLeft="6dp"
                        android:layout_width="12dp"
                        android:layout_height="11dp"
                        android:background="@drawable/icon_darkstar"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buy_willing_three"
                    android:layout_toRightOf="@+id/buy_willing_two"
                    android:orientation="horizontal"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_tag_selector">
                    <ImageView
                        android:layout_marginLeft="4dp"
                        android:layout_width="12dp"
                        android:layout_height="11dp"
                        android:background="@drawable/icon_lightstar"/>
                    <ImageView
                        android:layout_marginLeft="6dp"
                        android:layout_width="12dp"
                        android:layout_height="11dp"
                        android:background="@drawable/icon_lightstar"/>
                    <ImageView
                        android:layout_marginLeft="6dp"
                        android:layout_width="12dp"
                        android:layout_height="11dp"
                        android:background="@drawable/icon_lightstar"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_dcdcdc"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginRight="@dimen/dimen_12dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp">
                <TextView
                    android:id="@+id/gender"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/color_000a14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:text="性别"/>

                <RelativeLayout
                    android:layout_marginLeft="55dp"
                    android:layout_toRightOf="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RadioGroup
                        android:id="@+id/rg_group"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rb_men_fans"
                            android:layout_centerVertical="true"
                            android:layout_width="70dp"
                            android:text="男"
                            android:button="@null"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/tag_checked_selector"
                            android:layout_height="25dp"
                            android:background="@drawable/btn_tag_selector"/>
                        <RadioButton
                            android:id="@+id/rb_woman_fans"
                            android:layout_toRightOf="@+id/rb_men_fans"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_width="70dp"
                            android:button="@null"
                            android:text="女"
                            android:textColor="@color/tag_checked_selector"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:layout_height="25dp"
                            android:background="@drawable/btn_tag_selector"/>
                    </RadioGroup>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_dcdcdc"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginRight="@dimen/dimen_12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_chosetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="按运营商选择"
                    android:textColor="#000a14"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="16dp"
                    />
                <LinearLayout
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tag_cu_fans"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:text="联通"
                        android:textSize="12sp"
                        android:textColor="@color/color_000a14"
                        android:gravity="center"
                        android:background="@drawable/btn_tag_selector"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_12dp"
                        android:id="@+id/tag_cm_fans"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:text="移动"
                        android:textSize="12sp"
                        android:textColor="@color/color_000a14"
                        android:gravity="center"
                        android:background="@drawable/btn_tag_selector"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_12dp"
                        android:id="@+id/tag_cn_fans"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:text="电信"
                        android:textSize="12sp"
                        android:textColor="@color/color_000a14"
                        android:gravity="center"
                        android:background="@drawable/btn_tag_selector"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>