<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical" >


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/title_bg"
        android:paddingRight="10dip" >


        <TextView
            style="@style/text_18_black"
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="商品"
            />
        <TextView
            android:layout_width="wrap_content" android:visibility="gone"
            android:layout_height="wrap_content" android:text="管理"
            android:layout_gravity="right|center" android:id="@+id/btn_manage"
            android:textColor="#5f646e"  android:textSize="14sp"/>

    </FrameLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/grey" />
    <include layout="@layout/viewpage_container"/>
</LinearLayout>