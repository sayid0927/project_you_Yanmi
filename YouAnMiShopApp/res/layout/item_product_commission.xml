<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/grey_f9f9f9"
    android:paddingTop="15dp" android:paddingLeft="12dp" android:paddingRight="12dp" android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_product" android:layout_width="65dp" android:layout_height="65dp"
            />
        <LinearLayout
            android:layout_width="match_parent" android:layout_marginLeft="12dp" android:orientation="vertical" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content" style="@style/text_15_black" android:layout_height="wrap_content"  android:id="@+id/txt_productName"
                android:maxLines="2" android:ellipsize="end"
               />
            <TextView
                android:layout_width="wrap_content" android:textColor="@color/gray_999999" android:textSize="12sp" android:layout_marginTop="5dp" android:maxLines="2" android:ellipsize="end"
                android:layout_height="wrap_content"  android:id="@+id/txt_remark" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content" android:orientation="vertical" android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content" style="@style/text_15_black"
                android:layout_height="wrap_content" android:id="@+id/txt_price"/>
            <TextView
                android:layout_width="wrap_content" android:textColor="@color/gray_999999" android:textSize="12sp" android:layout_marginTop="5dp"
                android:layout_height="wrap_content"  android:id="@+id/txt_count" android:text="x1" android:layout_gravity="right"/>
        </LinearLayout>

    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="right" android:layout_marginTop="10dp" android:paddingBottom="12dp">
    <TextView
        android:layout_width="wrap_content" android:textColor="@color/red_e22121"
        android:layout_height="wrap_content" android:textSize="13sp" android:id="@+id/txt_commission_price"/>
    <TextView
        android:layout_width="wrap_content" android:layout_marginLeft="10dp"  style="@style/text_14_white" android:text="退款中"
        android:layout_height="wrap_content" android:background="@drawable/btn_orange_ff5f19_selector" android:id="@id/txt_status"
        android:paddingRight="9dp" android:paddingLeft="9dp" android:paddingBottom="5dp" android:paddingTop="5dp"/>
</LinearLayout>
    <View
        android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/grey" android:id="@+id/line"/>
</LinearLayout>
