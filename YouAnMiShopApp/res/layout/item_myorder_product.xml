<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_product"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f9f9f9"
    android:padding="10dip"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_productIcon"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_marginRight="10dip"
        android:src="@drawable/product_def"
        />

    <TextView
        android:id="@+id/txt_productName"
        android:textSize="15sp"
        android:textColor="@color/gray_333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_productIcon"
        android:layout_toLeftOf="@+id/layout_right"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="苹果手机ASSDSDSDSDSDSDSDSDSDSDSD"/>

    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_price"
            android:textSize="15sp"
            android:textColor="@color/gray_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="￥3000"/>

        <TextView
            android:id="@+id/txt_oldPrice"
            style="@style/text_13_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="20dip"/>

        <TextView
            android:id="@+id/txt_productCount"
            android:textSize="14sp"
            android:textColor="@color/gray_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="x2"/>
    </LinearLayout>




</RelativeLayout>




