<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
                android:background="#ffffff">

    <TextView
        android:id="@+id/tx_multi_push_who"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableRight="@drawable/ease_add_orange_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/multi_push_who_test"
        android:textColor="#051b28"
        android:textSize="14sp"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/push_test_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray_eeeeee"/>

        <EditText
            android:id="@+id/push_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="left|top"
            android:hint="内容\n\n\n\n"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sum_edit"
            android:textColor="@color/black_000000"
            android:layout_gravity="right"
            android:text="(0/200)"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/multi_push_type_test"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#EEEEEE"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:textColor="#999999"/>



    <include
        android:id="@+id/layout_search"
        layout="@layout/common_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include
        layout="@layout/ease_pull_to_refresh_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
       />
        <LinearLayout
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@color/white">
            <TextView
                android:layout_width="326.5dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn2_selector"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>