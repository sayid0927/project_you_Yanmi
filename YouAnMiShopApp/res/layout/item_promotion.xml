<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
        android:id="@+id/dot"
        android:layout_width="5dip"
        android:layout_height="15.5dip"
        android:background="#eb3131"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="13.5dip"/>

    <TextView
        android:id="@+id/txt_promotion_name"
        android:layout_width="wrap_content"
        android:layout_height="42dip"
        android:layout_marginLeft="6dip"
        android:layout_toRightOf="@id/dot"
        android:gravity="center"
        android:text="推广中心"
        android:textColor="@color/dark_grey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_promotion_tips"
        android:layout_width="wrap_content"
        android:layout_height="42dip"
        android:gravity="center"
        android:text="设置推广指标"
        android:padding="10dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dip"
        android:textColor="@color/grey_aaaaaa"
        android:drawableRight="@drawable/turn_right_small"
        android:drawablePadding="10dp"
        android:textSize="13sp" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.7dip"
        android:layout_below="@+id/txt_promotion_name"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/grey" />


    <com.zxly.o2o.view.MListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:cacheColorHint="#00000000"
        android:divider="#19000000"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="#00000000"
        android:smoothScrollbar="true" />

</RelativeLayout>
