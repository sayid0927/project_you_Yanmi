<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_eeeeee">


    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bg_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:background="@drawable/bg_cash_coupon_1">


            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:text="价格"
                android:textColor="@color/white"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_price"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="70dp"
                android:layout_toRightOf="@+id/txt_price"

                android:includeFontPadding="false"
                android:textColor="#9a1355"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txt_price"
                android:layout_below="@+id/txt_price"
                android:text="描述"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/txt_available_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txt_price"
                android:layout_below="@+id/txt_desc"
                android:text="有效期"
                android:textColor="@color/white"
                android:textSize="12sp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/part2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_top"
            android:layout_marginTop="18dp"
            android:background="@color/white">

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"

                android:background="@color/gray_dcdcdc" />

            <TextView
                android:id="@+id/txt_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/icon_shop"
                android:drawablePadding="10dp"
                android:text="门店名称"
                android:textColor="@color/gray_333333"
                android:textSize="15sp" />


            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/txt_shop_name"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_dcdcdc" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/icon_address"
                android:drawablePadding="10dp"
                android:text="地址"
                android:textColor="@color/black_000000"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/txt_phoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txt_address"
                android:layout_below="@+id/txt_address"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/icon_phone"
                android:drawablePadding="10dp"
                android:text="联系电话"
                android:textColor="@color/gray_333333"
                android:textSize="12sp" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/txt_phoneNo"
                android:layout_marginTop="7dp"
                android:background="@color/gray_dcdcdc" />
        </RelativeLayout>

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/part2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn3_normal"
            android:gravity="center"
            android:text="确认使用"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <com.zxly.o2o.view.LoadingView
        android:id="@+id/view_loading"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

</RelativeLayout>