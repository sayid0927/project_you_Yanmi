<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:background="@drawable/wd_chongdianbao_bg"
    android:layout_height="102dp" >
    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="67dp" android:layout_weight="1" android:gravity="center_vertical" android:layout_marginLeft="12dp">
        <TextView
            android:layout_width="wrap_content" android:textSize="30sp" android:textStyle="bold"
            android:layout_height="wrap_content"  android:textColor="#ffffff" android:id="@+id/txt_name" android:text="50元"/>
        <TextView
            android:layout_width="wrap_content" android:textSize="15sp" android:textColor="#06766a"
            android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:id="@+id/txt_type" android:text="现金抵扣"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="1" android:gravity="center_vertical"
        android:layout_height="35dp"   android:layout_marginLeft="12dp" android:paddingRight="10dp" >
        <TextView
            android:layout_width="match_parent" android:id="@+id/txt_lqrs" android:text="领取人数：500"
            android:layout_height="wrap_content" android:textSize="12sp" android:textColor="#ffffff"  android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content" android:id="@+id/txt_syrs" android:text="使用人数：500"
            android:layout_height="wrap_content" android:textSize="12sp" android:textColor="#ffffff"  />
    </LinearLayout>
</LinearLayout>