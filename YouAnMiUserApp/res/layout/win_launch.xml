<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent" android:id="@+id/img_advert"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent" android:id="@+id/launchView"
        android:layout_height="match_parent"
        android:background="@drawable/start_bg">

        <ImageView
            android:id="@+id/img_iconTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="166dip"
            android:scaleType="centerCrop"
            android:src="@drawable/start_icon1" />

        <TextView
            android:id="@+id/txt_update_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_iconTop"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="18sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_info"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/txt_appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_logo"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/img_logo"
                android:text="@string/app_name"
                android:textColor="@color/gray_333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/logo" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:text="© 2016深圳柚安米科技有限公司"
            android:textColor="@color/gray_999999"
            android:textSize="10sp" />

    </RelativeLayout>
</FrameLayout>
