<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/mycircle_topmost_layout"
                android:background = "@color/white">


    <RelativeLayout
        android:id = "@+id/mycircle_second_page_tab1"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:background = "@color/transparent"
        android:paddingLeft = "@dimen/o2o_padding"
        android:paddingRight = "@dimen/o2o_padding">

        <TextView
            android:id = "@+id/topmost_tip_1"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:paddingLeft = "5dp"
            android:paddingRight = "5dp"
            android:paddingTop = "1dp"
            android:paddingBottom = "3dp"
            android:background = "#ff3300"
            android:text = "置顶"
            android:gravity = "center"
            android:layout_centerVertical = "true"
            android:textColor = "@color/white"
            android:textSize = "@dimen/small_text"/>

        <TextView
            android:id = "@+id/mycircle_second_page_tab1_text"
            android:layout_width = "match_parent"
            android:layout_height = "50dp"
            android:layout_marginLeft = "5dp"
            android:layout_toRightOf = "@+id/topmost_tip_1"
            android:layout_marginRight = "5dp"
            android:layout_toLeftOf = "@+id/mycircle_second_page_tab1_text2"
            android:drawablePadding = "5dp"
            android:gravity = "center_vertical"
            android:background = "@color/transparent"
            android:singleLine = "true"
            android:textColor = "@color/half_transparent_orange"/>

        <TextView
            android:id = "@+id/mycircle_second_page_tab1_text2"
            android:layout_width = "30dp"
            android:layout_height = "wrap_content"
            android:layout_alignParentRight = "true"
            android:singleLine = "true"
            android:layout_centerVertical = "true"
            android:background = "@drawable/mendian_xiaoxi"
            android:gravity = "center"
            android:visibility="gone"
            android:textColor = "@color/orange2"
            android:textSize = "@dimen/small_text"/>
    </RelativeLayout>


    <View
        android:id = "@+id/divide"
        android:layout_width = "match_parent"
        android:layout_height = "0.5dp"
        android:layout_below = "@+id/mycircle_second_page_tab1"
        android:layout_gravity = "center_vertical"
        android:layout_marginLeft = "@dimen/o2o_padding"
        android:layout_marginRight = "@dimen/o2o_padding"
        android:background = "@color/grey"/>

    <RelativeLayout
        android:id = "@+id/mycircle_second_page_tab2"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@+id/divide"
        android:paddingLeft = "@dimen/o2o_padding"
        android:background = "@color/transparent"
        android:paddingRight = "@dimen/o2o_padding">

        <TextView
            android:id = "@+id/topmost_tip_2"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:background = "#ff3300"
            android:text = "置顶"
            android:paddingTop = "1dp"
            android:paddingBottom = "3dp"
            android:gravity = "center"
            android:layout_centerVertical = "true"
            android:paddingLeft = "5dp"
            android:paddingRight = "5dp"
            android:textColor = "@color/white"
            android:textSize = "@dimen/small_text"/>

        <TextView
            android:id = "@+id/mycircle_second_page_tab2_text"
            android:layout_width = "match_parent"
            android:layout_height = "50dp"
            android:layout_marginLeft = "5dp"
            android:layout_marginRight = "5dp"
            android:layout_toRightOf = "@+id/topmost_tip_2"
            android:layout_toLeftOf = "@+id/mycircle_second_page_tab2_text2"
            android:background = "@color/transparent"
            android:drawablePadding = "5dp"
            android:gravity = "center_vertical"
            android:singleLine = "true"
            android:textColor = "@color/half_transparent_orange"/>

        <TextView
            android:id = "@+id/mycircle_second_page_tab2_text2"
            android:layout_width = "30dp"
            android:layout_height = "wrap_content"
            android:layout_alignParentRight = "true"
            android:layout_centerVertical = "true"
            android:singleLine = "true"
            android:visibility="gone"
            android:background = "@drawable/mendian_xiaoxi"
            android:gravity = "center"
            android:textColor = "@color/orange2"
            android:textSize = "@dimen/small_text"/>
    </RelativeLayout>

</RelativeLayout>