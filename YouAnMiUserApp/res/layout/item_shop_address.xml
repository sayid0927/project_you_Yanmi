<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent" android:paddingLeft="12dp" android:paddingBottom="15dp"
        android:layout_height="wrap_content" >
        <ImageView
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp"
            android:background="@drawable/checkbox_style" android:id="@+id/btn_check"/>
        <TextView
            android:layout_width="wrap_content" style="@style/text_14_black" android:layout_toRightOf="@id/btn_check" android:layout_marginTop="15dp"
            android:layout_height="wrap_content" android:text="送货上门" android:layout_marginLeft="17dp" android:id="@+id/txt_shop_name"/>
        <TextView
            android:layout_width="wrap_content" android:layout_alignLeft="@id/txt_shop_name" android:layout_below="@id/txt_shop_name" android:id="@+id/txt_address"
            android:layout_height="wrap_content" android:text="百思不得其解百思不得其解百思不得其解百思不得其解百思不得其解百思不得其解百思不得其解" android:layout_marginTop="10dp"
            android:textColor="@color/gray_666666" android:layout_marginRight="50dp"/>
        <TextView
            android:layout_width="wrap_content" android:layout_alignLeft="@id/txt_shop_name" android:layout_below="@id/txt_address" android:id="@+id/txt_tel"
            android:layout_height="wrap_content" android:text="13570859314" android:layout_marginTop="6dp" android:textColor="@color/gray_666666"/>

        <FrameLayout
            android:layout_width="45dp" android:orientation="horizontal" android:layout_alignParentRight="true"  android:layout_below="@id/txt_shop_name"
            android:layout_height="30dp">
            <View
                android:layout_width="0.5dp" android:layout_height="match_parent" android:background="@color/grey" />
            <ImageView
                android:layout_width="wrap_content" android:src="@drawable/call" android:id="@+id/btn_call"
                android:layout_height="wrap_content" android:layout_gravity="center"/>
        </FrameLayout>

    </RelativeLayout>
    <View android:layout_height="0.5dp" android:layout_width="match_parent" android:background="@color/grey"/>
</LinearLayout>
