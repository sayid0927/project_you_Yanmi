<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.easemob.easeui.widget.SwipeLayout xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/orange_ff5f19"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_del"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:paddingLeft="30dp"
                android:paddingRight="37dp">

                <ImageView
                    android:id="@+id/img_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_discount_gift" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_discount_right" />

                <TextView
                    android:id="@+id/txt_discount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22.5dp"
                    android:layout_marginTop="14.5dp"
                    android:singleLine="true"
                    android:text="充电宝"
                    android:textColor="@color/white"
                    android:textSize="22.5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_discount_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="162.5dp"
                    android:layout_marginTop="27dp"
                    android:singleLine="true"
                    android:text="礼品赠送"
                    android:textColor="@color/purple_9a1355"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_discount_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_discount_title"
                    android:layout_marginLeft="22.5dp"
                    android:layout_marginTop="9dp"
                    android:singleLine="true"
                    android:text="到店消费立即赠送"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_discount_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_discount_content"
                    android:layout_marginLeft="22.5dp"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:text="有效期：2016-05-01~2016.05.09"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_use_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dp"
                    android:text="立即\n使用"
                    android:textColor="@color/purple_dd4991"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_discount_used"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>
    </com.easemob.easeui.widget.SwipeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="9dp" />

</LinearLayout>
