<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loading_bg"
        android:paddingLeft="35dip"
        android:paddingRight="35dip"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:id="@+id/loading"
        android:paddingBottom="20dip"
        android:gravity="center"
        android:orientation="vertical" >
        <ImageView style="@style/wrap_content"
            android:src="@drawable/loading_big"
            android:id="@+id/img_progress"/>
        <TextView android:textSize="14sp" android:textColor="@color/white" android:text="请稍候" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="10dip" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/view_loadFail"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_loadResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/text_loading"
            style="@style/text_15_light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/btn_loading"
            android:textColor="#999999"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:background="@drawable/btn4_selector"
            android:text="重新加载"
            android:visibility="gone" />

     </LinearLayout>


</FrameLayout>