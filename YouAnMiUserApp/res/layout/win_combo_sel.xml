<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_white_bg"
    android:orientation="vertical">

    <include layout="@layout/viewpage_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dip"
        android:background="@color/grey" />
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="6dp"
               android:paddingBottom="5dp"
                android:paddingLeft="12dp">

                 <TextView
                        android:id="@+id/txt_price"
                        android:textColor="@color/orange_ff5f19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                 <TextView
                        android:textSize="13sp"
                        android:textColor="@color/light_grey"
                      android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:id="@+id/txt_pre_price"
                        />
            </LinearLayout>
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dip"
            android:gravity="center_vertical" >
         <RelativeLayout
             android:layout_width="56dp"
             android:background="@drawable/bt_bg_selector"
             android:id="@+id/btn_chat"
             android:orientation="vertical"
             android:layout_height="49dp">
             <View
                 android:layout_width="match_parent"
                 android:layout_height="0.7dip"
                 android:background="@color/grey" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="客服"
                 android:textColor="#999999"
                 android:gravity="center_horizontal"
                 android:layout_centerInParent="true"
                 android:textSize="11sp"
                 android:drawableTop="@drawable/kefu"/>
         </RelativeLayout>

            <TextView
                android:id="@+id/btn_join_cart"
                style="@style/text_18_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_rect_yellow_selector"
                android:gravity="center"
                android:text="加入购物车" />
            <TextView
                android:id="@+id/btn_to_buy"
                style="@style/text_18_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_rect_orange_selector"
                android:gravity="center"
                android:text="立即购买" />
        </LinearLayout>

</LinearLayout>