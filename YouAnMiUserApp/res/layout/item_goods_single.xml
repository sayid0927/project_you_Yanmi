<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tag_nice_choice_clearance_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_white_bg"
    android:gravity="center"
    android:orientation="horizontal" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/tag_nice_choice_clearance_goods_icon"
        android:layout_width="114.38dip"
        android:layout_height="86dip"
        android:src="@drawable/store_product_icon_big"
         />

    <!-- 右边 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_white_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tag_nice_choice_clearance_goods_item_name"
            style="@style/text_13_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="小米4核手机" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tag_nice_choice_clearance_goods_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                style="@style/text_14_orange" 
                android:text="$1999"
                />

            <TextView
                android:id="@+id/tag_nice_choice_clearance_goods_item_old_price"
                style="@style/text_12_light_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="$2999" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>