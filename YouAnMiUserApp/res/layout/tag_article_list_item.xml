<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tag_article_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >
    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/grey" />
    <TextView
        android:id="@+id/txt_article_type"
        android:layout_width="50dip"
        android:layout_height="17dip"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="6dip"
        android:text=""
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="11sp"
        android:textColor="#f46c00"
        android:background="@drawable/article_item_bg" />

    <ImageView
        android:id="@+id/img_article_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dip"
        android:layout_toRightOf="@+id/txt_article_type"
        android:src="@drawable/shouye_remenhuati_ding" />

    <TextView
        android:id="@+id/txt_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_article_status"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:text="1.如何甄别手机电池"
        android:layout_marginTop="13dip"
        android:layout_marginBottom="13dip"
        android:textColor="#000000"
        android:textSize="16sp" />

    <View
        android:id="@+id/line_bot"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey" />

</RelativeLayout>