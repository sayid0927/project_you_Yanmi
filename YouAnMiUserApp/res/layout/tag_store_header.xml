<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/image_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pic"
        android:orientation="horizontal" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/tag_store_icon"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="-27dp"
        android:layout_below="@+id/image_top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/mendian_logo"
        android:padding="2.5dp"
        android:src="@drawable/mendian_head" />

    <TextView
        android:id="@+id/tag_store_icon_number"
        android:layout_width="35.5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tag_store_icon"
        android:layout_alignRight="@+id/tag_store_icon"
        android:layout_margin="2.5dp"
        android:background="@color/half_transparent"
        android:gravity="center_vertical|right"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tag_store_tel"
        style="@style/text_12_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_top"
        android:layout_toRightOf="@+id/tag_store_icon"
        android:layout_marginTop="8dp"
        android:text="电话：" />

    <TextView
        android:id="@+id/tag_store_addr"
        style="@style/text_12_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tag_store_icon"
        android:layout_below="@+id/tag_store_tel"
        android:layout_marginRight="10dp"
        android:text="地址:" />

    <LinearLayout
        android:id="@+id/lables_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_top"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:gravity="right"
        android:orientation="horizontal" />

    <View
        android:id="@+id/bot_line"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tag_store_addr"
        android:background="@drawable/bot_line" />

</RelativeLayout>