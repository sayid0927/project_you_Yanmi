<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/tag_article_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tag_article_hot"
                    style="@style/text_12_white"
                    android:layout_width="29dp"
                    android:layout_height="18.5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/red_lable"
                    android:gravity="center"
                    android:text="置顶" />
        
        <TextView
            android:id="@+id/tag_article_type"
            style="@style/text_15_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-10dp"
            android:text="【新手必看】" />

        <TextView
            android:id="@+id/tag_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:text="1.如何甄别手机电池"
            android:layout_gravity="center_vertical"
             style="@style/text_15_black" />

        <TextView
            android:id="@+id/tag_article_replycount"
            android:layout_width="26.5dp"
            android:layout_height="15.5dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mendian_xiaoxi"
            android:gravity="center"
            android:text="234"
            android:layout_gravity="center_vertical"
            android:textColor="#d45406"
            android:textSize="10sp" />
    </LinearLayout>

    <View
        android:id="@+id/tag_article_bot_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/grey" />

</LinearLayout>