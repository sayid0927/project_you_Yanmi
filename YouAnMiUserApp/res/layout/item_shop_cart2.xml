<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_white_bg"
    android:orientation="vertical"
    >
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/grey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"  android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/checkbox" android:layout_width="42dp" android:clickable="false" android:layout_height="match_parent"
            android:scaleType="center" android:src="@drawable/checkbox_style" />
        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="92dp" android:background="@drawable/line_black_rect"
            android:layout_height="86dp" android:id="@+id/item_icon"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="9dip">

            <TextView
                android:id="@+id/txt_name"
                style="@style/text_15_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:id="@+id/txt_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="12sp" android:ellipsize="end" android:maxLines="2" />
            <LinearLayout
                android:layout_width="wrap_content" android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content" android:textColor="@color/orange_ff5f19"
                    android:layout_height="wrap_content" android:textSize="20sp" android:id="@+id/txt_price"/>
                <TextView
                    android:layout_width="wrap_content" android:textColor="@color/gray_999999" android:layout_marginLeft="12sp"
                    android:layout_height="wrap_content" android:textSize="12sp" android:id="@+id/txt_pref_price" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39.5dp"
        android:paddingLeft="42dp" android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_subtract"
            android:background="@drawable/button_product_subtract_selector"/>
        <TextView
            style="@style/text_18_black" android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/txt_buy_sum"
            android:background="@drawable/middle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_add"
            android:background="@drawable/button_product_add_selector"/>
        <View
            android:layout_width="match_parent" android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="63dp" android:layout_height="30dp"
            android:id="@+id/txt_del" style="@style/text_16_white"
            android:background="@drawable/button_orange"
            android:text="删除" android:gravity="center"
          />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/grey" />

</LinearLayout>