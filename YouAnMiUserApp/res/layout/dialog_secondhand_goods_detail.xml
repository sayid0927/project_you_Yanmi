<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_white_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="物品情况" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/app_white_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="购买"
            android:textColor="@color/black" />

        <RadioGroup
            android:id="@+id/item1_radiogroup"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/item1_radiobtn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="半年内"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/item1_radiobtn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/article_top_title_mindlebtn_selector"
                android:button="@null"
                android:gravity="center"
                android:text="一年内"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/item1_radiobtn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="三年内"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/item1_radiobtn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="三年以上"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/app_white_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="外观"
            android:textColor="@color/black" />

        <RadioGroup
            android:id="@+id/item2_radiogroup"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/item2_radiobtn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="完好"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/item2_radiobtn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/article_top_title_mindlebtn_selector"
                android:button="@null"
                android:gravity="center"
                android:text="轻微划痕"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/item2_radiobtn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="明显划痕"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/item2_radiobtn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp"
                android:visibility="invisible" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/app_white_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="功能"
            android:textColor="@color/black" />

        <RadioGroup
            android:id="@+id/item3_radiogroup"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/item3_radiobtn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="正常"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/item3_radiobtn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="轻微故障"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/item3_radiobtn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="故障"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/item3_radiobtn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="有进水过"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/app_white_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="维修"
            android:textColor="@color/black" />

        <RadioGroup
            android:id="@+id/item4_radiogroup"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/item4_radiobtn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="无拆无修"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/item4_radiobtn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/article_top_title_mindlebtn_selector"
                android:button="@null"
                android:gravity="center"
                android:text="维修过"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/item4_radiobtn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp"
                android:visibility="invisible" />

            <RadioButton
                android:id="@+id/item4_radiobtn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/mycircle_title_textcolor_selector"
                android:textSize="12sp"
                android:visibility="invisible" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/app_white_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="配件"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/parts_cb1"
            style="@style/SecondHandCheckboxTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="5dp"
            android:text="正品发票"
            android:textColor="@color/grey"
            android:textSize="12sp" >
        </CheckBox>

        <CheckBox
            android:id="@+id/parts_cb2"
            style="@style/SecondHandCheckboxTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="5dp"
            android:text="保修期内"
            android:textColor="@color/grey"
            android:textSize="12sp" >
        </CheckBox>

        <CheckBox
            android:id="@+id/parts_cb3"
            style="@style/SecondHandCheckboxTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="5dp"
            android:text="配件齐全"
            android:textColor="@color/grey"
            android:textSize="12sp" >
        </CheckBox>
    </LinearLayout>

</LinearLayout>