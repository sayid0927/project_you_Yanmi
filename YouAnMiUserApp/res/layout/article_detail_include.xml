<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/app_white_bg"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/article_detail_maimtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <com.easemob.easeui.widget.MyWebView
        android:id="@+id/article_detail_maimcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_detail_maimtime"
        android:layout_marginTop="5dp"
        android:background="@drawable/app_white_bg"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:scrollingCache="false" />

    <TextView
        android:id="@+id/detail_upicon"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_below="@+id/article_detail_maimcontent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/article_detail_downicon"
        android:background="@drawable/zan_bnt"
        android:drawableLeft="@drawable/bt_zan_selector"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="@color/red_price" />

    <TextView
        android:id="@+id/operate_text_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_detail_maimcontent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/article_detail_downicon"
        android:text="+ 1"
        android:textSize="12sp"
        android:textColor="@color/red"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/article_detail_downicon"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/article_detail_maimcontent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/zan_bnt"
        android:drawableLeft="@drawable/bt_cai_selector"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textSize="12sp"
        android:textColor="@color/red_price" />
    
      <TextView
        android:id="@+id/down_operate_text_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_detail_maimcontent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:text="+ 1"
        android:textSize="12sp"
        android:visibility="gone"
        android:textColor="@color/red"
         />

    <View
        android:id="@+id/grep_line"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/article_detail_downicon"
        android:background="@color/white" />

    <TextView
        android:id="@+id/reply_refresh_btn"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/grep_line"
        android:background="@drawable/jingcaipinglun"
        android:gravity="center"
        android:text="精彩评论"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>