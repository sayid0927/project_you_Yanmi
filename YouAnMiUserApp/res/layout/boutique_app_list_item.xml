<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_boutique_layout"
        android:layout_width="fill_parent"
        android:layout_height="72dp" >

        <ImageView
            android:id="@+id/iv_boutique_list_icon"
            android:layout_width="56dip"
            android:layout_height="56dip"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dip"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/iv_boutique_list_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip" />

        <TextView
            android:id="@+id/tv_boutique_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_boutique_list_icon"
            android:layout_toRightOf="@id/iv_boutique_list_icon"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="16dp" />

        <RatingBar
            android:id="@+id/rb_boutique_list_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toRightOf="@id/iv_boutique_list_icon"
            android:isIndicator="true"
            android:numStars="5"
            android:paddingTop="2dip"
            android:rating="0.1"
            android:stepSize="0.1" />

        <TextView
            android:id="@+id/tv_boutique_list_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rb_boutique_list_rating"
            android:ellipsize="marquee"
            android:paddingTop="2dip"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_boutique_list_icon"
            android:layout_toRightOf="@id/iv_boutique_list_icon"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_boutique_list_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="#777777"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_boutique_list_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:singleLine="true"
                android:textColor="#777777"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_boutique_list_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="0dip"
            android:layout_toLeftOf="@+id/bt_boutique_list_download" />

        <Button
            android:id="@+id/bt_boutique_list_download"
            android:layout_width="55dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingBottom="15dip"
            android:paddingLeft="0dip"
            android:paddingRight="0dip"
            android:paddingTop="15dip"
            android:textColor="#666666"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/app_list_divider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>