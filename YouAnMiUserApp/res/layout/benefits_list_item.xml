<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="10dp">

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部优惠券"
        android:textColor="#999999"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xx_youhuiquan_bg">

        <com.easemob.easeui.widget.shapeimageview.PorterShapeImageView
            android:id="@+id/head_image"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ease_default_avatar"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            app:siShape="@drawable/ease_shape_bigrounded_rectangle"
            app:siSquare="true"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="23dp"
            android:layout_toLeftOf="@+id/view_btn"
            android:layout_toRightOf="@+id/head_image"
            android:singleLine="true"
            android:textColor="@color/gray_333333"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_what"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/view_btn"
            android:layout_toRightOf="@+id/head_image"
            android:textColor="#999999"
            android:textSize="12sp"/>

        <LinearLayout
            android:id="@+id/view_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/iv_message_send"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@drawable/xx_liaotian" />

            <ImageView
                android:id="@+id/iv_phone_call"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/xx_dianhua" />

        </LinearLayout>

        <ImageView
            android:id="@+id/divide0"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="80dp"
            android:background="#dcdcdc"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/divide0"
            android:textColor="#999999"
            android:clickable="false"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"/>
    </RelativeLayout>


</LinearLayout>