<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="@color/gray_eeeeee">
    <com.zxly.o2o.view.MListView
        android:id="@+id/listview_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:layout_weight="1"
        android:background="@color/gray_eeeeee"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:listSelector="@color/transparent"
        android:scrollbars="none"
        android:scrollingCache="false"
        />
    <View
        android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/grey"/>
   <TextView
       android:layout_width="wrap_content" android:layout_marginLeft="10dp" android:textColor="@color/gray_666666" android:textSize="14sp"
       android:layout_height="32dp" android:text="  配送方式"  android:gravity="center_vertical" android:drawableLeft="@drawable/iconfont_peisong"/>
    <View android:layout_width="wrap_content" android:layout_height="0.5dp" android:background="@color/grey"/>
    <RelativeLayout
        android:layout_width="match_parent"  android:paddingLeft="12dp" android:paddingBottom="15dp"
        android:layout_height="wrap_content" android:background="@drawable/app_white_bg" android:id="@+id/btn_shsm">

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/checkbox_style"
            android:id="@+id/checkbox_shsm" android:layout_marginTop="12dp"/>
        <TextView
            android:layout_width="wrap_content" style="@style/text_15_black" android:layout_toRightOf="@id/checkbox_shsm" android:layout_marginTop="15dp"
            android:layout_height="wrap_content" android:text="送货上门" android:layout_marginLeft="17dp" android:id="@+id/txt_shsm"/>
        <TextView
            android:layout_width="wrap_content" android:textColor="@color/gray_666666" android:textSize="13sp" android:id="@+id/txt_deliver_info"
            android:layout_height="wrap_content"  android:layout_below="@id/txt_shsm"
            android:layout_marginTop="10dp" android:layout_alignLeft="@id/txt_shsm"/>

        <TextView
            android:layout_width="wrap_content" android:textColor="@color/orange_ff5f19" android:text="更换地址" android:drawableRight="@drawable/turn_right"
            android:layout_height="wrap_content" android:textSize="13sp" android:id="@+id/btn_change_sm" android:layout_marginTop="18dp"
            android:visibility="visible" android:layout_alignParentRight="true" android:layout_marginRight="12dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/grey" android:layout_marginLeft="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent" android:paddingLeft="12dp" android:paddingBottom="15dp"
            android:layout_height="wrap_content" android:background="@drawable/app_white_bg"  android:id="@+id/btn_ddzq">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/checkbox_style"
                android:id="@+id/checkbox_ddzq" android:layout_marginTop="12dp"/>
            <TextView
                android:layout_width="wrap_content" style="@style/text_15_black" android:layout_toRightOf="@id/checkbox_ddzq" android:layout_marginTop="15dp"
                android:layout_height="wrap_content" android:text="到店自提" android:layout_marginLeft="17dp" android:id="@+id/txt_ddzq"/>
            <TextView
                android:layout_width="wrap_content" android:textColor="@color/gray_666666" android:textSize="13sp" android:id="@+id/txt_take_info"
                android:layout_height="wrap_content" android:layout_below="@id/txt_ddzq" android:layout_alignLeft="@id/txt_ddzq"
                android:layout_marginTop="10dp" />
            <TextView
                android:layout_width="wrap_content" android:textColor="@color/orange_ff5f19" android:text="更换地址" android:drawableRight="@drawable/turn_up2"
                android:layout_height="wrap_content" android:textSize="13sp" android:id="@+id/btn_change_zq" android:layout_marginTop="18dp"
                android:visibility="visible" android:layout_alignParentRight="true" android:layout_marginRight="12dp"/>
        </RelativeLayout>
    <View
        android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/grey" />

</LinearLayout>
