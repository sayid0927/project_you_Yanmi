<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_product"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dip"
    android:paddingLeft="10dip"
    android:background="@color/white"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_product_icon"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_marginRight="10dip"
        />

    <RelativeLayout
        android:id="@+id/product_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_alignTop="@+id/img_product_icon"
        android:layout_toRightOf="@+id/img_product_icon">

        <TextView
            android:id="@id/text_productName"
            style="@style/text_15_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/text_price"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="苹果手机ASSDSDSDSDSDSDSDSDSDSDSD"/>

        <TextView
            android:id="@id/text_comboInfo"
            style="@style/text_12_light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/text_productName"
            android:layout_marginTop="3dip"
            android:layout_toLeftOf="@id/text_price"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:visibility="visible"/>


        <TextView
            android:id="@id/text_price"
            style="@style/text_15_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dip"
            android:text="￥3000"/>

        <TextView
            android:id="@id/text_product_count"
            style="@style/text_14_light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/text_price"
            android:layout_below="@id/text_price"
            android:layout_gravity="right"
            android:text="x2"/>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/layout_refund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_product_icon"
        android:layout_marginTop="-8dp"
        android:paddingBottom="5dp"
        android:visibility="visible" >

        <TextView
            android:id="@id/text_refund_reside_time"
            android:textSize="13sp"
            android:textColor="@color/orange_ff5f19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="13dp"
            android:text="退款剩余时间"/>

        <TextView
            android:id="@id/btn_refund_status"
            android:textSize="15sp"
            android:textColor="@color/orange_ff5f19"
            android:background="@drawable/btn_repair"
            android:layout_width="73dip"
            android:layout_height="28.5dip"
            android:layout_alignBottom="@+id/text_refund_reside_time"
            android:layout_marginRight="10dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="申请退款"/>



        </RelativeLayout>


    <View
        android:id="@+id/line_bot"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/img_product_icon"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@color/grey"/>

</RelativeLayout>




