<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_white_bg"
    android:orientation="vertical" >

    <com.zxly.o2o.view.MyScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="83dip" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/baner_pager"
                    android:layout_width="match_parent"
                    android:layout_height="270dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_gravity="bottom"
                    android:background="@drawable/daojishi"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="3dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="3dip" >

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/dingwei"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_release_time"
                        style="@style/text_15_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:drawableLeft="@drawable/clock" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/txt_name"
                    style="@style/text_18_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/txt_price"
                style="@style/text_20_red__price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/grey" />

            <LinearLayout
                android:id="@+id/assure_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8.5dip"
                    android:background="#EFEFEF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <TextView
                        style="@style/text_18_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="担保" />

                    <TextView
                        style="@style/text_12_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/danbao"
                        android:paddingBottom="2dp"
                        android:paddingLeft="8dip"
                        android:gravity="center"
                        android:paddingRight="6dip"
                        android:paddingTop="2dp"
                        android:text="门店担保" />

                    <TextView
                        android:id="@+id/txt_assure_rate"
                        style="@style/text_15_darkgray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <TextView
                        style="@style/text_18_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="担保期限" />

                    <TextView
                        android:id="@+id/txt_assure_limit"
                        style="@style/text_15_darkgray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/assure_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8.5dip"
                    android:background="#EFEFEF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/grey" />

                <TextView
                    style="@style/text_18_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:text="担保范围" />

                <TextView
                    android:id="@+id/txt_assure_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dip"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/darkgray"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/wpjk_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/grey" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8.5dip"
                    android:background="#EFEFEF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/grey" />

                <TextView
                    style="@style/text_18_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingTop="10dip"
                    android:text="物品情况" />

                <com.zxly.o2o.view.MListView
                    android:id="@+id/assure_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="17dip"
                    android:layout_marginTop="10dip"
                    android:cacheColorHint="#00000000"
                    android:divider="#00000000"
                    android:dividerHeight="0dip"
                    android:fadingEdge="none"
                    android:listSelector="@color/transparent"
                    android:paddingBottom="10dip"
                    android:paddingRight="10dip"
                    android:scrollbars="none"
                    android:scrollingCache="false" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/used_desc_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/grey" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8.5dip"
                    android:background="#EFEFEF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/grey" />

                <TextView
                    style="@style/text_18_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:text="物品描述" />

                <TextView
                    android:id="@+id/txt_used_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dip"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/darkgray"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </com.zxly.o2o.view.MyScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dip"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/txt_tel"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/btn_call_selector"
                android:gravity="center"
                android:text="电话咨询"
                android:textColor="#999999"
                android:textSize="14sp" />

            <View
                android:layout_width="0.7dip"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <LinearLayout
                android:id="@+id/btn_collect_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_collect"
                    style="@style/wrap_content"
                    android:background="@drawable/product_collect_normal" />

                <TextView
                    style="@style/wrap_content"
                    android:text="收藏"
                    android:textColor="#999999"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_to_buy"
                style="@style/text_18_white"
                android:layout_width="match_parent"
                android:layout_height="56dip"
                android:visibility="gone"
                android:layout_weight="1"
                android:background="@drawable/btn_rect_orange_selector"
                android:gravity="center"
                android:text="购买" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white" >

        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="1dip"
            android:layout_marginLeft="10dip"
            android:background="@drawable/bnt_circle"
            android:gravity="center" >

            <ImageView
                android:layout_width="15.333dip"
                android:layout_height="28dip"
                android:background="@drawable/back_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="1dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/bnt_circle"
            android:gravity="center" >

            <TextView
                android:id="@+id/txt_index"
                style="@style/text_18_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_total"
                style="@style/text_15_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:id="@+id/line_title"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_gravity="bottom"
            android:background="@color/grey"
            android:visibility="gone" />
    </FrameLayout>
    <com.zxly.o2o.view.LoadingView
        android:id="@+id/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="center" />

</FrameLayout>