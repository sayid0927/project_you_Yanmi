<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_blank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/img_blank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/loading_empty" />

    <TextView
        android:id="@+id/text_blank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_blank"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#999999" />

    <Button
        android:id="@+id/btn_blank"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_below="@+id/text_blank"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/personal_dialog_text_bg"
        android:textColor="#999999"
        android:visibility="gone" />

</RelativeLayout>