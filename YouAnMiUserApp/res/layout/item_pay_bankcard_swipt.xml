<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_head"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_dcdcdc" />

    <com.easemob.easeui.widget.SwipeLayout xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/orange_ff5f19"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_del"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/icon_del"
                android:gravity="center"
                android:padding="12dp"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@color/white">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/img_bank_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp" />

                    <TextView
                        android:id="@+id/txt_bankcard_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="625887869128453"
                        android:textColor="@color/gray_666666"
                        android:textSize="13sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="9dp"
                        android:layout_toRightOf="@+id/img_bank_logo">

                        <TextView
                            android:id="@+id/txt_bank_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="招商银行"
                            android:textColor="@color/gray_333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_card_type"
                            android:layout_width="44dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/txt_bank_name"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/icon_yhklx_bg"
                            android:gravity="center"
                            android:text="储蓄卡"
                            android:textColor="@color/white"
                            android:textSize="11sp" />
                    </RelativeLayout>

                </RelativeLayout>

        </LinearLayout>
    </com.easemob.easeui.widget.SwipeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_dcdcdc" />
</LinearLayout>
