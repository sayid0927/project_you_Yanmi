<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        style="@style/text_15_black"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/content_title_height"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="二手寄卖 " />

    <ImageView
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/content_title_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:paddingLeft="60dp"
        android:scaleType="center"
        android:src="@drawable/mendian_turn" />

    <com.zxly.o2o.view.MListView
        android:id="@+id/tag_secondhand_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efefef"
        android:layout_marginTop="1dip"
        android:layout_below="@+id/btn_more"
        android:cacheColorHint="#00000000"
        android:divider="#19000000"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="#00000000"
        android:smoothScrollbar="true" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efefef"
        android:layout_below="@+id/tag_secondhand_content">
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="7dip"
            android:layout_height="0.5dp"
            android:background="@color/grey" />
    </RelativeLayout>
</RelativeLayout>