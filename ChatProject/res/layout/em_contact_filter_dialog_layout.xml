<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="10dp">

    <TextView
        android:id="@+id/filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="筛选"
        android:textColor="#666666"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/clean_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="清除条件"
        android:textColor="#ff5f19"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/divide1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/clean_filter"
        android:layout_marginTop="20dp"
        android:background="#dcdcdc"/>


    <TextView
        android:id="@+id/tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide1"
        android:layout_marginTop="20dp"
        android:text="注册属性"
        android:textColor="#051b28"
        android:textSize="16sp"/>

    <RadioGroup
        android:id="@+id/isregist_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/unregisted_btn"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="未注册"
            android:textColor="#051b28"
            android:textSize="13sp"/>

        <RadioButton
            android:id="@+id/registed_btn"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/unregisted_btn"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="已注册"
            android:textColor="#051b28"
            android:textSize="13sp"/>
    </RadioGroup>


    <ImageView
        android:id="@+id/divide2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/isregist_btn_layout"
        android:layout_marginTop="20dp"
        android:background="#dcdcdc"/>


    <LinearLayout
        android:id="@+id/tip2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide3"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="佣金贡献(元)"
            android:textColor="#051b28"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/yj_input_btn1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:inputType="numberDecimal"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="1dp"
            android:background="#000000"/>

        <EditText
            android:id="@+id/yj_input_btn2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:inputType="numberDecimal"
            android:textSize="12sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/yj_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip2_layout"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/yj_btn1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text=" 0~50 "
            android:textColor="@color/black_051b28"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/yj_btn2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="50~100"
            android:textColor="@color/black_051b28"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/yj_btn3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="100~200"
            android:textColor="@color/black_051b28"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/yj_btn4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="200以上"
            android:textColor="@color/black_051b28"
            android:textSize="9sp"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/yj_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yj_btn_layout"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/yj_line"/>

    <ImageView
        android:id="@+id/divide3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/regist_time_btn_layout"
        android:layout_marginTop="20dp"
        android:background="#dcdcdc"/>

    <LinearLayout
        android:id="@+id/input_regist_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide2"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册时间"
            android:textColor="#051b28"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/regist_time_input_btn1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:hint="起始时间"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#bfbfc5"
            android:textSize="13sp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="1dp"
            android:background="#000000"/>

        <TextView
            android:id="@+id/regist_time_input_btn2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:hint="截止时间"
            android:inputType="number"
            android:textColor="#bfbfc5"
            android:textSize="13sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/regist_time_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_regist_layout"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/registed_btn1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="近一个月"
            android:textColor="#051b28"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/registed_btn2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="近三个月"
            android:textColor="#051b28"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/registed_btn3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="近半年"
            android:textColor="#051b28"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/registed_btn4"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/ease_grey_orange_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="近一年"
            android:textColor="#051b28"
            android:textSize="11sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/yj_line"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:button="@null"
            android:text="取消"
            android:textColor="#949494"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="#ff5f19"
            android:button="@null"
            android:text="确认"
            android:textColor="#ffffff"/>
    </LinearLayout>


</RelativeLayout>