<?xml version="1.0" encoding="utf-8"?>
<com.easemob.easeui.widget.OverScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_white_normal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoLink="web"
            android:focusable="true"
            android:gravity="left|center"
            android:minHeight="50dp"
            android:textColor="#000000"
            android:textSize="16sp" />
        <!--
        android:singleLine="true"
        android:maxWidth="225.0dip"-->

        <TextView
            android:id="@+id/tv_content"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left|center"
            android:lineSpacingExtra="1dp"
            android:textColor="#666666"
            android:textScaleX="1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:layout_marginLeft="10dp"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_time"
            android:layout_margin="10dp"
            android:background="#4f999999" />

    </RelativeLayout>

</com.easemob.easeui.widget.OverScrollView>